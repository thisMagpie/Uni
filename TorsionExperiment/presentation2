%%%%%%%% HISTORY %%%%%%%%%%%%%%%%%%%
\begin{frame}
\frametitle[Gravitational Constant]{Background}
\framesubtitle{Henry Cavendish 1731-1810 }

   \begin{itemize}[<+->]
   \item  Cambridge drop out.
   \item  Used the torsion pendulum to try determine the density of the Earth.
   \item The literature value for G is ${6.67\times 10^{-11}}m^{3}kg^{-1}s^{2}$
   \end{itemize}
\end{frame}

%%%%%%%% Procedure %%%%%%%%%



\begin{frame}{Two Methods}
	\framesubtitle{Why?}

    \begin{columns}[c] % the "c" option specifies center vertical alignment
    \column{.5\textwidth} % column designated by a command
     \begin{itemize}[<+->]
     
     \item End Deflection
     \item Uses equation
     \end{itemize}
         \column{.5\textwidth}
              \begin{itemize}[<+->]
     
     \item Acceleration.
     \item Uses Gradient 
     
     \end{itemize}

    \end{columns}
\end{frame}



\begin{frame}
\frametitle[Gravitational Constant]{End Deflection}
\framesubtitle{How it works.}
\begin{itemize}[<+->]
\item  $$G=\frac{\pi^2 \Delta{S}  b^2 d}{T^2 m_{2} L}{\rm \ m}^3 {\rm kg}^{-1} {\rm s}^{-2}$$
\item That's pretty much as exciting as it gets.
\item Well almost.... Here's my result 
\item $6.56(16)\times{10^{-11}}{\rm \ m}^3 {\rm kg}^{-1} {\rm s}^{-2}$!!!
\end{itemize}
\end{frame}


\begin{frame}
\frametitle[Gravitational Constant]{Acceleration}
\framesubtitle{How it works.}
\begin{itemize}[<+->]
\item $G=\frac{a_{0} b^2 }{ 2 m_{2}}{\rm \ m}^3 {\rm kg}^{-1} {\rm s}^{-2}$
\item Where:
\item $a_{0}=\frac{L}{d}=\text{gradient of linear fit}$
\item $\frac{a_{o}L}{d}$ is the slope of linear graph
\item Here's my result:
\item $6.67(13)\times{10^{-11}}{\rm \ m}^3 {\rm kg}^{-1} {\rm s}^{-2}$!!!


   \end{itemize}


\end{frame}


\begin{frame}
\frametitle[Gravitational Constant]{Acceleration Downsides}
\framesubtitle{Reproducibility is questionable}
   \begin{itemize}
   \item  Not Enough data points.
   \item  Hard to swing it the same way, every time.
   \item $a_{o}$ is the slope of linear graph.
   \end{itemize}

\end{frame}

\begin{frame}
\frametitle[Gravitational Constant]{Acceleration Upsides}
\framesubtitle{Damping and Crashing}
   \begin{itemize}
   \item  Does not matter too much about damping.
   \item  Don't need to wait too long to get results.
   \item With different software you can record more time steps.
   \end{itemize}

\end{frame}

